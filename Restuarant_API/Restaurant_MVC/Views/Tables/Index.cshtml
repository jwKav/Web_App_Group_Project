@model IEnumerable<Restaurant_API.Models.Table>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("TableId")
            </th>
            <th>
                @Html.DisplayName("Booked")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TableId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBooked)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TableCategory.TableCategoryId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TableId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TableId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TableId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
